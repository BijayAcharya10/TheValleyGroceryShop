<script>
    $(document).ready(function () {

        $('.viewitem').click(function (event) {
            event.preventDefault();
            $.get(this.href, function (response) {
                $('.divForUpdate').html(response);
            });
            $('#quick-view-modal').modal({
                backdrop: 'static',
            }, 'show');
        });
    });
</script>


